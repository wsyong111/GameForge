<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT" follow="true" direct="false">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%-5level] [%X{classLoader}/%t] [%logger{1.}] %msg%n"/>
		</Console>

		<Async name="AsyncConsole">
			<AppenderRef ref="Console"/>
		</Async>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="AsyncConsole"/>
			<!--			<AppenderRef ref="RollingFile"/>-->
		</Root>
	</Loggers>
</Configuration>
